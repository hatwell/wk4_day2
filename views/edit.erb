<form method="post" action="/pizzas/<%=@pizza.id%>">
  <label for="first-name">First Name:</label>
  <input id="first_name" type="text" name="first_name" value="<%=@pizza.first_name%>" />

  <label for="last-name"> Last Name:</label>
  <input id="last_name" type="text" name="last_name" value="<%=@pizza.last_name%>" />

  <label for="pizza-select"> Select a pizza:</label>
  <select id="pizza-select" name="topping">
    <option value="Margerita" <%= 'selected' if @pizza.topping == 'Margherita' %>/>
      Margherita
    </option>
    <option value="Pepperoni" <%= 'selected' if @pizza.topping == 'Pepperoni' %>/>
      Pepperoni
    </option>
    <option value="Calzone" <%= 'selected' if @pizza.topping == 'Calzone' %>/>
      Calzone
    </option>
  </select>

  <label for="quantity">Quantity</label>
  <input id="quantity" type="number" name="quantity" value="<%=@pizza.quantity%>" />
  <br/>
  <input type="submit" value="Update Order" />
